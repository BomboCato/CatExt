{
    "manifest_version": 2,
    "name": "CatExt",
    "version": "1.0",
    "description": "Bring a joyful cat to your browser !",

    "icons": 
    {
        "48": "icons/ext_icon.webp"
    },

    "permissions": ["<all_urls>", "file://*/*"],
    
    "content_scripts":
    [
        {
            "matches": ["<all_urls>"],
            "js": ["catext.js"]
        }
    ]
}